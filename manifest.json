{
    "manifest_version": 3,
    "name": "Auto Tab Group",
    "version": "1.0",
    "description": "Automatically groups tabs by ticket ID for Bitbucket and Atlassian.",
    "permissions": [
        "tabs",
        "tabGroups",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "host_permissions": [
        "https://*.bitbucket.org/*",
        "https://*.atlassian.net/*"
    ]
}